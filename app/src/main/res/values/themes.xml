<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme -->
    <style name="Theme.Sherpalink" parent="Theme.Material.Light.NoActionBar" />

    <!-- Splash screen theme -->
    <style name="Theme.Sherpalink.Splash" parent="Theme.SplashScreen">
        <!-- Background color of splash -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <!-- Splash icon -->
        <!-- Use ic_launcher temporarily to avoid resource linking errors -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- App theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.Sherpalink</item>
    </style>

</resources>
